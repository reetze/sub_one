<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all sent emails
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new sent email
    </h2>

    <form action="/insert_sent_email" method="post">
      <div class="form-group">
        <label for="volunteer_id_box">
          Volunteer
        </label>

        <input type="text" id="volunteer_id_box" name="query_volunteer_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="sub_request_id_box">
          Sub request
        </label>

        <input type="text" id="sub_request_id_box" name="query_sub_request_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create sent email
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Volunteer
        </th>

        <th>
          Sub request
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @sent_emails.each do |sent_email| %>
      <tr>
        <td>
          <%= sent_email.id %>
        </td>

        <td>
          <%= sent_email.volunteer_id %>
        </td>

        <td>
          <%= sent_email.sub_request_id %>
        </td>

        <td>
          <%= time_ago_in_words(sent_email.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(sent_email.updated_at) %> ago
        </td>

        <td>
          <a href="/sent_emails/<%= sent_email.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
